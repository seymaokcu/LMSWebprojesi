@model List<LmsProje.Entities.Course>
@{
    ViewData["Title"] = "Kurslar";
}

<div class="d-flex justify-content-between mb-3">
    <h3>Kurslar</h3>
    <a href="/Admin/Course/Create" class="btn btn-primary">+ Yeni Kurs</a>
</div>

<table class="table table-hover bg-white shadow-sm rounded align-middle">
    <thead>
        <tr><th>Resim</th><th>Başlık</th><th>Kategori</th><th>Fiyat</th><th>İşlemler</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" width="50" class="rounded" /></td>
                <td class="fw-bold">@item.Title</td>
                <td><span class="badge bg-secondary">@item.Category?.Name</span></td>
                <td>@item.Price ₺</td>
                <td>
                    <a href="/Admin/Section/Manage?courseId=@item.Id" class="btn btn-sm btn-warning">Müfredat</a>
                    <a href="/Admin/Course/Delete/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>