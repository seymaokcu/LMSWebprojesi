@model List<LmsProje.Entities.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="d-flex justify-content-between mb-3">
    <h3>Kategoriler</h3>
    <a href="/Admin/Category/Create" class="btn btn-primary">+ Yeni Ekle</a>
</div>

<table class="table table-hover bg-white shadow-sm rounded">
    <thead>
        <tr><th>ID</th><th>Ad</th><th>İşlemler</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Category/Delete/@item.Id" class="text-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>