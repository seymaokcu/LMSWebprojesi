@model LmsProje.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow border-0">
            <div class="card-body p-4">
                <h3 class="text-center fw-bold mb-4 text-primary">Giriş Yap</h3>

                <form method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3">
                        <label>E-Posta</label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                    </div>

                    <div class="mb-3">
                        <label>Şifre</label>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label">Beni Hatırla</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Giriş Yap</button>
                </form>

                <p class="text-center mt-3 small">
                    Hesabın yok mu? <a href="/Account/Register">Kayıt Ol</a>
                </p>
            </div>
        </div>
    </div>
</div>
