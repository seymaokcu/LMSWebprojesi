@model LmsProje.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profil Ayarları";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group shadow-sm">
                <a href="/Account/Profile" class="list-group-item list-group-item-action active border-0 fw-bold">
                    <i class="fa-solid fa-user-pen me-2"></i> Profil Bilgileri
                </a>
                <a href="/Home/Dashboard" class="list-group-item list-group-item-action border-0">
                    <i class="fa-solid fa-graduation-cap me-2"></i> Kurslarım
                </a>
                <a href="/Basket/Index" class="list-group-item list-group-item-action border-0">
                    <i class="fa-solid fa-receipt me-2"></i> Sipariş Geçmişi
                </a>
                <a href="/Account/Logout" class="list-group-item list-group-item-action border-0 text-danger">
                    <i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış Yap
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Profilini Düzenle</h5>
                </div>
                <div class="card-body p-4">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form method="post" enctype="multipart/form-data">

                        <div class="d-flex align-items-center mb-4">
                            <div class="me-3">
                                @if (string.IsNullOrEmpty(Model.CurrentImage))
                                {
                                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center fs-2" style="width: 80px; height: 80px;">
                                        @Model.FirstName.Substring(0, 1)
                                    </div>
                                }
                                else
                                {
                                    <img src="@Model.CurrentImage" class="rounded-circle shadow-sm" style="width: 80px; height: 80px; object-fit: cover;">
                                }
                            </div>
                            <div>
                                <label class="form-label fw-bold small text-muted">Profil Fotoğrafı</label>
                                <input type="file" asp-for="ProfileImage" class="form-control form-control-sm" accept="image/*">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Ad</label>
                                <input type="text" asp-for="FirstName" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Soyad</label>
                                <input type="text" asp-for="LastName" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">E-Posta</label>
                            <input type="text" asp-for="Email" class="form-control" disabled />
                            <small class="text-muted">E-posta adresi güvenlik nedeniyle değiştirilemez.</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Şehir</label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Örn: İstanbul" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary px-4 fw-bold">Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
