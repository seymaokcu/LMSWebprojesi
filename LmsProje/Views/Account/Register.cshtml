@model LmsProje.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow border-0">
            <div class="card-body p-4">
                <h3 class="text-center fw-bold mb-4 text-primary">Aramıza Katıl</h3>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger small"></div>

                    <div class="row mb-3">
                        <div class="col">
                            <label>Ad</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Adınız" />
                        </div>
                        <div class="col">
                            <label>Soyad</label>
                            <input asp-for="LastName" class="form-control" placeholder="Soyadınız" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>E-Posta</label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                    </div>

                    <div class="mb-3">
                        <label>Şifre</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <small class="text-muted" style="font-size:11px">En az 3 karakter (Ayarladığımız gibi)</small>
                    </div>

                    <div class="mb-4">
                        <label>Şifre Tekrar</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Kayıt Ol</button>
                </form>

                <p class="text-center mt-3 small">
                    Zaten hesabın var mı? <a href="/Account/Login">Giriş Yap</a>
                </p>
            </div>
        </div>
    </div>
</div>
