@model List<LmsProje.Entities.Course>
@{
    ViewData["Title"] = "Eğitmen Paneli";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold font-serif">Eğitmen Paneli</h2>
            <p class="text-muted">Kurslarınızı yönetin ve gelirlerinizi takip edin.</p>
        </div>
        <a href="/Instructor/Create" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
            <i class="fa-solid fa-plus me-2"></i> Yeni Kurs Oluştur
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5 bg-light rounded border border-dashed">
            <i class="fa-solid fa-person-chalkboard fa-3x text-muted mb-3 opacity-50"></i>
            <h4>Henüz bir kursunuz yok.</h4>
            <p class="text-muted">İlk kursunuzu oluşturarak dünyaya açılın!</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Kurs</th>
                            <th>Fiyat</th>
                            <th>Kategori</th>
                            <th>Öğrenci / Puan</th>
                            <th>Durum</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImageUrl" class="rounded me-3" style="width: 60px; height: 40px; object-fit: cover;">
                                        <span class="fw-bold text-dark">@item.Title</span>
                                    </div>
                                </td>
                                <td class="fw-bold text-primary">@item.Price ₺</td>
                                <td><span class="badge bg-secondary bg-opacity-10 text-secondary">@item.Category?.Name</span></td>
                                <td>
                                    <div class="small">
                                        <i class="fa-solid fa-user me-1"></i> 0 Öğrenci <br>
                                        <i class="fa-solid fa-star text-warning me-1"></i>
                                        @(item.Reviews.Any() ? item.Reviews.Average(r => r.Rating).ToString("0.0") : "0.0")
                                    </div>
                                </td>
                                <td><span class="badge bg-success">Yayında</span></td>
                                <td class="text-end pe-4">
                                    <a href="/Home/Details/@item.Id" class="btn btn-sm btn-outline-dark" target="_blank" title="Görüntüle"><i class="fa-solid fa-eye"></i></a>
                                    <a href="/CourseManager/Index?courseId=@item.Id" class="btn btn-sm btn-outline-primary ms-1" title="Müfredatı Düzenle">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-outline-danger ms-1" title="Sil"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
