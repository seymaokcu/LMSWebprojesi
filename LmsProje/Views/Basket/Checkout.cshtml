@model LmsProje.Entities.Basket
@{
    ViewData["Title"] = "Güvenli Ödeme";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-7">
            <h4 class="fw-bold mb-4"><i class="fa-solid fa-credit-card me-2"></i> Kart Bilgileri</h4>

            <div class="card shadow-sm border-0 p-4">
                <form action="/Basket/CompletePayment" method="post">

                    <div class="mb-4 p-3 bg-dark text-white rounded credit-card-preview" style="background: linear-gradient(45deg, #1e3c72, #2a5298);">
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold">BANK NAME</span>
                            <i class="fa-brands fa-cc-mastercard fs-1"></i>
                        </div>
                        <div class="mb-2">
                            <small class="d-block opacity-75" style="font-size:10px;">CARD NUMBER</small>
                            <span class="fs-4 fw-bold" style="letter-spacing: 2px;">0000 0000 0000 0000</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <small class="d-block opacity-75" style="font-size:10px;">CARD HOLDER</small>
                                <span class="fw-bold">AD SOYAD</span>
                            </div>
                            <div>
                                <small class="d-block opacity-75" style="font-size:10px;">EXPIRES</small>
                                <span class="fw-bold">MM/YY</span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Kart Üzerindeki İsim</label>
                        <input type="text" class="form-control form-control-lg" placeholder="Ad Soyad" required />
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Kart Numarası</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-credit-card"></i></span>
                            <input type="text" class="form-control form-control-lg" placeholder="0000 0000 0000 0000" maxlength="19" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Son Kullanma (Ay/Yıl)</label>
                            <div class="d-flex gap-2">
                                <select class="form-select form-select-lg">
                                    <option>01</option>
                                    <option>02</option>
                                    <option>12</option>
                                </select>
                                <select class="form-select form-select-lg">
                                    <option>2025</option>
                                    <option>2026</option>
                                    <option>2027</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">CVV (Güvenlik Kodu)</label>
                            <input type="text" class="form-control form-control-lg" placeholder="123" maxlength="3" required />
                        </div>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" checked disabled>
                        <label class="form-check-label text-muted small">
                            Mesafeli Satış Sözleşmesi'ni okudum ve onaylıyorum.
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg py-3 fw-bold shadow">
                        @Model.Items.Sum(x => x.Price) ₺ Öde ve Bitir
                    </button>

                    <div class="text-center mt-3 text-muted small">
                        <i class="fa-solid fa-lock me-1"></i> Ödemeniz 256-bit SSL ile korunmaktadır.
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-5">
            <h4 class="fw-bold mb-4">Sipariş Özeti</h4>
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.Course.Title</span>
                            <span class="fw-bold">@item.Price ₺</span>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between fs-4 fw-bold text-success">
                        <span>Toplam Tutar</span>
                        <span>@Model.Items.Sum(x => x.Price) ₺</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
