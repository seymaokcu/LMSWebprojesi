@model List<LmsProje.Entities.Course>
@{
    ViewData["Title"] = "Kursları Keşfet";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <h4 class="fw-bold font-serif mb-0">
            @if (ViewBag.Search != null)
            {
                <span>"@ViewBag.Search" için sonuçlar</span>
            }
            else
            {

                <span>Tüm Kurslar</span>
            }
            <span class="text-muted fs-6 ms-2">(@Model.Count kurs bulundu)</span>
        </h4>

        <form id="sortForm" method="get" class="d-flex align-items-center">
            <input type="hidden" name="search" value="@ViewBag.Search" />
            <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
            <input type="hidden" name="price" value="@ViewBag.Price" />

            <span class="me-2 text-muted small fw-bold">Sırala:</span>
            <select name="sort" class="form-select form-select-sm border-0 bg-light fw-bold" style="width: 150px;" onchange="this.form.submit()">
                <option value="">Önerilen</option>
                <option value="newest" selected="@(ViewBag.Sort == "newest")">En Yeniler</option>
                <option value="price_asc" selected="@(ViewBag.Sort == "price_asc")">En Düşük Fiyat</option>
                <option value="price_desc" selected="@(ViewBag.Sort == "price_desc")">En Yüksek Fiyat</option>
            </select>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm p-3 sticky-top" style="top: 100px;">
                <h5 class="fw-bold mb-3"><i class="fa-solid fa-filter me-2 text-primary"></i> Filtrele</h5>

                <form action="/Home/Explore" method="get">
                    <input type="hidden" name="search" value="@ViewBag.Search" />
                    <input type="hidden" name="sort" value="@ViewBag.Sort" />

                    <div class="mb-4">
                        <h6 class="fw-bold border-bottom pb-2 mb-2">Kategoriler</h6>
                        @foreach (var cat in ViewBag.Categories as List<LmsProje.Entities.Category>)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="categoryId" value="@cat.Id" id="cat_@cat.Id"
                                       @(ViewBag.CategoryId == cat.Id ? "checked" : "") onchange="this.form.submit()">
                                <label class="form-check-label small" for="cat_@cat.Id">@cat.Name</label>
                            </div>
                        }
                        <div class="form-check mt-1">
                            <input class="form-check-input" type="radio" name="categoryId" value="" id="cat_all"
                                   @(ViewBag.CategoryId == null ? "checked" : "") onchange="this.form.submit()">
                            <label class="form-check-label small text-muted" for="cat_all">Tümü</label>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold border-bottom pb-2 mb-2">Fiyat</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="price" value="" id="price_all"
                                   @(string.IsNullOrEmpty(ViewBag.Price) ? "checked" : "") onchange="this.form.submit()">
                            <label class="form-check-label small" for="price_all">Tümü</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="price" value="free" id="price_free"
                                   @(ViewBag.Price == "free" ? "checked" : "") onchange="this.form.submit()">
                            <label class="form-check-label small" for="price_free">Ücretsiz</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="price" value="paid" id="price_paid"
                                   @(ViewBag.Price == "paid" ? "checked" : "") onchange="this.form.submit()">
                            <label class="form-check-label small" for="price_paid">Ücretli</label>
                        </div>
                    </div>

                    <a href="/Home/Explore" class="btn btn-outline-dark btn-sm w-100">Filtreleri Temizle</a>
                </form>
            </div>
        </div>

        <div class="col-lg-9">
            @if (Model.Count == 0)
            {
                <div class="text-center py-5 border rounded bg-light">
                    <i class="fa-solid fa-magnifying-glass fa-3x text-muted mb-3 opacity-50"></i>
                    <h4>Sonuç Bulunamadı</h4>
                    <p class="text-muted">Arama kriterlerinizi değiştirip tekrar deneyin.</p>
                    <a href="/Home/Explore" class="btn btn-primary btn-sm">Tüm Kursları Göster</a>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="card mb-3 border-0 shadow-sm hover-shadow transition-card">
                        <div class="row g-0">
                            <div class="col-md-4 position-relative">
                                <a href="/Home/Details/@item.Id">
                                    <img src="@item.ImageUrl" class="img-fluid rounded-start h-100" style="object-fit: cover; min-height: 180px;" alt="...">
                                </a>
                                @if (item.IsFree)
                                {
                                    <span class="badge bg-success position-absolute top-0 start-0 m-2 shadow-sm">ÜCRETSİZ</span>
                                }
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title fw-bold mb-1">
                                            <a href="/Home/Details/@item.Id" class="text-dark text-decoration-none">@item.Title</a>
                                        </h5>
                                        <h5 class="fw-bold text-primary">@item.Price ₺</h5>
                                    </div>

                                    <p class="card-text text-muted small mb-2">
                                        @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                    </p>

                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-light text-dark border me-2">@item.Category?.Name</span>
                                        <div class="text-warning small">
                                            <i class="fa-solid fa-star"></i>
                                            <span class="fw-bold text-dark">4.8</span>
                                            <span class="text-muted">(120)</span>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 mt-3">
                                        <a href="/Home/Details/@item.Id" class="btn btn-primary btn-sm px-4 rounded-pill">İncele</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        transform: translateY(-2px);
    }

    .transition-card {
        transition: all 0.3s ease;
    }
</style>
