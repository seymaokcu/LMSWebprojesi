@model LmsProje.Entities.Course
@{
    ViewData["Title"] = Model.Title;
}

<div class="bg-dark text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <span class="badge bg-warning text-dark mb-2">@Model.Category?.Name</span>
                <h1 class="fw-bold display-5">@Model.Title</h1>
                <p class="lead text-light opacity-75">@Model.Description</p>
                <div class="d-flex align-items-center mt-3">
                    <span class="me-3"><i class="fa-solid fa-clock me-1"></i> Son Güncelleme: @Model.CreatedDate.ToString("dd.MM.yyyy")</span>
                    <span><i class="fa-solid fa-globe me-1"></i> Türkçe</span>
                </div>
            </div>
            <div class="col-md-4 d-none d-md-block">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="fw-bold mb-3">Kurs İçeriği</h4>

                    @if (!Model.Sections.Any())
                    {
                        <div class="alert alert-warning">Bu kursa henüz içerik eklenmemiş.</div>
                    }
                    else
                    {
                        <div class="accordion" id="accordionCurriculum">
                            @foreach (var sec in Model.Sections)
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#sec-@sec.Id">
                                            <span class="fw-bold text-dark">@sec.Name</span>
                                            <span class="ms-auto badge bg-secondary me-2">@sec.Lessons.Count Ders</span>
                                        </button>
                                    </h2>
                                    <div id="sec-@sec.Id" class="accordion-collapse collapse" data-bs-parent="#accordionCurriculum">
                                        <div class="accordion-body p-0">
                                            <ul class="list-group list-group-flush">
                                                @foreach (var lesson in sec.Lessons)
                                                {
                                                    <a href="/Home/Watch?lessonId=@lesson.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                                        <span><i class="fa-regular fa-circle-play me-2 text-primary"></i> @lesson.Title</span>
                                                        <span class="small text-muted">@lesson.DurationMinutes dk</span>
                                                    </a>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card shadow-sm mb-4 mt-4 border-0">
                            <div class="card-body p-4">
                                <h4 class="fw-bold mb-4"><i class="fa-solid fa-star text-warning me-2"></i> Öğrenci Yorumları</h4>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="bg-light p-3 rounded mb-4">
                                        <h6 class="fw-bold mb-2">Puan Ver ve Yorum Yaz</h6>
                                        <form action="/Home/AddReview" method="post">
                                            <input type="hidden" name="courseId" value="@Model.Id" />

                                            <div class="mb-2">
                                                <select name="rating" class="form-select w-auto d-inline-block">
                                                    <option value="5">⭐⭐⭐⭐⭐ (5 - Mükemmel)</option>
                                                    <option value="4">⭐⭐⭐⭐ (4 - Çok İyi)</option>
                                                    <option value="3">⭐⭐⭐ (3 - Orta)</option>
                                                    <option value="2">⭐⭐ (2 - Kötü)</option>
                                                    <option value="1">⭐ (1 - Berbat)</option>
                                                </select>
                                            </div>

                                            <textarea name="comment" class="form-control mb-2" rows="3" placeholder="Kurs hakkındaki düşüncelerin..." required></textarea>
                                            <button type="submit" class="btn btn-primary btn-sm">Yorumu Gönder</button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        Yorum yapmak için <a href="/Account/Login">giriş yapmalısınız.</a>
                                    </div>
                                }

                                @if (Model.Reviews.Any())
                                {
                                    @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedDate))
                                    {
                                        <div class="d-flex mb-4 border-bottom pb-3">
                                            <div class="flex-shrink-0">
                                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; font-size: 20px;">
                                                    @review.User.FirstName.Substring(0, 1)
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="fw-bold mb-0">@review.User.FirstName @review.User.LastName</h6>

                                                <div class="text-warning small mb-1">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating)
                                                        {
                                                            <i class="fa-solid fa-star"></i>
                                                        }
                                                        else
                                                        {

                                                            <i class="fa-regular fa-star"></i>
                                                        }
                                                    }
                                                    <span class="text-muted ms-2" style="font-size: 0.8rem;">@review.CreatedDate.ToString("dd.MM.yyyy")</span>
                                                </div>

                                                <p class="mb-0 text-muted">@review.Comment</p>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted fst-italic">Henüz bu kursa yorum yapılmamış. İlk yorumu sen yap!</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 sticky-top" style="top: 20px;">
  
                    
                        <div class="card shadow border-0 sticky-top" style="top: 20px;">
                            <img src="@Model.ImageUrl" class="card-img-top" alt="Kurs Resmi">
                            <div class="card-body p-4">
                                <h3 class="fw-bold mb-3">
                                    @(Model.IsFree ? "Ücretsiz" : Model.Price + " ₺")
                                </h3>

                                <div class="d-grid gap-2">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a href="/Basket/AddToBasket?courseId=@Model.Id" class="btn btn-outline-primary btn-lg fw-bold w-100 mb-2">
                                            <i class="fa-solid fa-cart-plus me-2"></i> Sepete Ekle
                                        </a>

                                    }
                                    else
                                    {
                                        <a href="/Account/Login" class="btn btn-primary btn-lg w-100">Giriş Yap ve Satın Al</a>
                                    }
                                </div>

                                <div class="mt-4 text-center small text-muted">
                                    <p class="mb-1">30 Gün Para İade Garantisi</p>
                                    <p>Ömür Boyu Erişim</p>
                                </div>
                            </div>
                        </div>
                
            </div>
        </div>
    </div>
</div>
