<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LmsProje</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3 sticky-top shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center me-4" href="/">
                    <i class="fa-solid fa-graduation-cap text-primary me-2 fa-xl"></i>
                    <span class="fw-bold text-dark" style="font-family: 'Merriweather', serif; font-size: 1.5rem; letter-spacing: -1px;">
                        Lms<span class="text-primary">Akademi</span>
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <ul class="navbar-nav me-3">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" data-bs-toggle="dropdown">Kategoriler</a>
                            <ul class="dropdown-menu shadow border-0 mt-2">
                                <li><a class="dropdown-item" href="/Home/Search?query=Yazılım">Yazılım</a></li>
                                <li><a class="dropdown-item" href="/Home/Search?query=Tasarım">Tasarım</a></li>
                                <li><a class="dropdown-item" href="/Home/Search?query=Pazarlama">Pazarlama</a></li>
                                <li><a class="dropdown-item" href="/Home/Search?query=Kişisel Gelişim">Kişisel Gelişim</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item fw-bold text-primary" href="/Home/Index#kurslar">Tüm Kursları Gör</a></li>
                            </ul>
                        </li>
                    </ul>

                    <form action="/Home/Explore" method="get" class="d-flex flex-grow-1 mx-lg-4 my-2 my-lg-0">
                        <div class="input-group rounded-pill border bg-light overflow-hidden" style="height: 48px;">
                            <button class="btn btn-light border-0 bg-transparent ps-3 text-muted" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                            <input name="query" class="form-control border-0 bg-transparent shadow-none" type="search" placeholder="Dilediğiniz şeyi arayın...">
                        </div>
                    </form>

                    <ul class="navbar-nav align-items-center gap-3 ms-auto">

                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link text-muted small hover-primary" href="/Instructor/Index">Eğitmen Olun</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-none d-md-block">
                                <a class="nav-link text-dark small" href="/Home/Dashboard">Öğrenim İçeriğim</a>
                            </li>
                        }

                        <li class="nav-item me-2">
                            <a class="nav-link text-dark position-relative hover-primary" href="/Basket/Index">
                                <i class="fa-solid fa-cart-shopping fa-lg"></i>
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">

                                <a href="#" data-bs-toggle="dropdown">
                                    @await Component.InvokeAsync("UserAvatar")
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-2 mt-2" style="min-width: 250px;">

                                    <li class="px-3 py-2 border-bottom mb-2">
                                        <div class="fw-bold text-truncate">@User.Identity.Name</div>
                                        <small class="text-muted">
                                            @(User.IsInRole("Admin") ? "Yönetici" : (User.IsInRole("Teacher") ? "Eğitmen" : "Öğrenci"))
                                        </small>
                                    </li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><h6 class="dropdown-header text-uppercase small fw-bold text-danger mt-2">Yönetim</h6></li>
                                        <li><a class="dropdown-item" href="/Admin/Category"><i class="fa-solid fa-layer-group me-2 text-danger"></i> Kategoriler</a></li>
                                        <li><a class="dropdown-item" href="/Admin/Dashboard"><i class="fa-solid fa-gauge-high me-2 text-danger"></i> Yönetim Paneli</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
                                    {
                                        <li><h6 class="dropdown-header text-uppercase small fw-bold text-primary mt-2">Eğitmen Alanı</h6></li>
                                        <li><a class="dropdown-item fw-bold text-primary" href="/Instructor/Create"><i class="fa-solid fa-plus me-2"></i> Yeni Kurs Ekle</a></li>
                                        <li><a class="dropdown-item" href="/Instructor/MyCourses"><i class="fa-solid fa-chalkboard-user me-2"></i> Kurslarım & Müfredat</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    <li><a class="dropdown-item" href="/Account/Profile"><i class="fa-solid fa-user-gear me-2"></i> Profil Ayarları</a></li>
                                    <li><a class="dropdown-item" href="/Basket/Index"><i class="fa-solid fa-basket-shopping me-2"></i> Sepetim</a></li>
                                    <li><a class="dropdown-item" href="/Favorite/Index"><i class="fa-solid fa-heart me-2"></i> İstek Listem</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış Yap</a></li>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="btn btn-outline-dark fw-bold rounded-0 px-3" href="/Account/Login">Giriş Yap</a></li>
                            <li class="nav-item"><a class="btn btn-dark fw-bold rounded-0 px-3" href="/Account/Register">Kaydol</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0 small opacity-75">&copy; 2025 LmsAkademi. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>